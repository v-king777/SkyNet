@model SkyNet.ViewModels.Account.RegisterViewModel

@{
    ViewData["Title"] = "Register";
}

<script src="https://ajax.aspnetcdn.com/ajax/jquery.validate/1.17.0/jquery.validate.min.js"></script>
<script src="https://ajax.aspnetcdn.com/ajax/jquery.validation.unobtrusive/3.2.10/jquery.validate.unobtrusive.min.js"></script>

<div class="mb-3">
    <h2>Регистрация нового пользователя</h2>
</div>

<form method="get" asp-controller="Register" asp-action="RegisterPart2">
    <div asp-validation-summary="ModelOnly"></div>
    <div class="mb-3">
        <label asp-for="FirstName"></label><br />
        <input asp-for="FirstName" class="form-control" />
        <span asp-validation-for="FirstName"></span>
    </div>
    <div class="mb-3">
        <label asp-for="LastName"></label><br />
        <input asp-for="LastName" class="form-control" />
        <span asp-validation-for="LastName"></span>
    </div>
    <div class="mb-3">
        <input type="submit" value="Регистрация" class="btn btn-primary" />
    </div>
</form>
