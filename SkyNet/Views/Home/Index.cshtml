@using Microsoft.AspNetCore.Identity;
@using SkyNet.Models.Users;
@inject SignInManager<User> SignInManager
@inject UserManager<User> UserManager;

@model SkyNet.ViewModels.Account.MainViewModel;

@{
    ViewData["Title"] = "Home Page";
    Layout = "_Layout";
}
@if (SignInManager.IsSignedIn(User))
{
    <div>Привет, @User.Identity.Name!</div>
}
else
{
    <div class="row">
        <div class="side">
            <div class="text-center">
                Пользуйтесь нашей самой крутой соцсетью! Регистрируйтесь всего за 2 минуты, делитесь мыслями, находите новых друзей!
            </div>
            <img class="main-img" src="http://pngimg.com/uploads/husky/husky_PNG19.png" alt="husky"/>
        </div>
        <div class="main">
            <partial name="Login" model="Model.LoginView"/>
            <partial name="Register" model="Model.RegisterView"/>
        </div>
    </div>
}